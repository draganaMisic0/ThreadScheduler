<UserControl x:Class="OPOS_project.TaskPlayerControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:OPOS_project"
             mc:Ignorable="d" Height="50" Width="685">
    <Grid Margin="0,10,0,0">
        <ProgressBar HorizontalAlignment="Left" Height="30" Margin="134,0,0,0" VerticalAlignment="Center" Width="318"/>
        <Button x:Name="playButton" Content="Play" HorizontalAlignment="Left" Margin="490,0,0,0" VerticalAlignment="Center" Height="30" Width="40" Click="playButton_Click"/>
        <Button x:Name="pauseButtton" Content="Pause" HorizontalAlignment="Left" Margin="556,0,0,0" VerticalAlignment="Center" Height="30" Width="40" ButtonBase.Click="pauseButtton_Click"/>
        <Button x:Name="stopButton" Content="Stop" HorizontalAlignment="Left" Margin="620,0,0,0" VerticalAlignment="Center" Height="30" Width="40" RenderTransformOrigin="0.169,0.484" Click="stopButton_Click"/>
        <Label x:Name="jobName" Content="{Binding Job.Name}" HorizontalAlignment="Left" Margin="30,0,0,0" VerticalAlignment="Center" Width="104"/>

    </Grid>
</UserControl>
